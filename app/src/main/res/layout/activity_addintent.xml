<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addintent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="androidx.appcompat.app.AppCompatDialogFragment"
        android:layout_width="411dp"
        android:layout_height="78dp"
        android:background="#7B178A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/criminalIntent_text"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Criminal Intent"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="87dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ЗАГОЛОВОК"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="100dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="177dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="128dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название:" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Детали"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="234dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="296dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="261dp" />

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solved"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="325dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="307dp"
        android:layout_height="45dp"
        android:text="Choose suspect"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:text="Отправить репорт"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="432dp" />

</androidx.constraintlayout.widget.ConstraintLayout>